<!doctype html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> menu cinemas="active" }}    
    <div class="ui segment">
      <div class="ui middle aligned animated selection list container">
          {{#each cinemas}}
            <div class="item">
              <i class="film icon"></i>
              <div class="content">
                <div class="header"><a href="/cinemas/{{id}}">{{name}}</a></div>
                <div class="description">{{city}}</a></div>
              </div>
            </div>
          {{/each}}
      </div>
    </div>
    <div class="ui container">
      <div class="ui right floated basic blue button" data-tooltip="Register a new cinema"
              data-position="left center">
        <a href="/cinema/new"><i class="user plus icon"></i> New </a>
      </div>
    </div>
  </body>
</html>